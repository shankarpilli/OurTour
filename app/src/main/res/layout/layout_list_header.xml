<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/themeColor">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190dp"
            android:padding="15dp"
            android:src="@drawable/side_menu_head_bg_two" />

        <TextView
            android:id="@+id/txt_vendor_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:text="@string/vendor_id"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold" />

        <!--<TextView
            android:id="@+id/txt_vendor_id_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginStart="@dimen/_10dp"
            android:text="@string/vendor_id_number"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_18sp"
            android:textStyle="bold" />-->

    </RelativeLayout>
</LinearLayout>