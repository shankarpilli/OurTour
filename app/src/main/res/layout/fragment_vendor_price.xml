<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fifteen_dp"
    tools:context="com.versatilemobitech.ourtour.fragments.VendorPriceFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_vendor_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten_dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_vehicle_make"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/down_arrow"
                android:focusable="false"
                android:hint="@string/vehicle_make"
                android:maxLength="30"
                android:singleLine="true"
                android:textSize="@dimen/twenty_sp" />

            <EditText
                android:id="@+id/et_seaters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/down_arrow"
                android:focusable="false"
                android:hint="@string/seaters"
                android:maxLength="30"
                android:singleLine="true"
                android:textSize="@dimen/twenty_sp" />

            <EditText
                android:id="@+id/et_kms_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/down_arrow"
                android:focusable="false"
                android:hint="@string/kms_price"
                android:maxLength="30"
                android:singleLine="true"
                android:textSize="@dimen/twenty_sp" />

            <EditText
                android:id="@+id/et_driver_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/driver_owner_name"
                android:maxLength="30"
                android:singleLine="true"
                android:textSize="@dimen/twenty_sp" />

            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:maxLength="10"
                android:singleLine="true"
                android:textSize="@dimen/twenty_sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/_180dp"
            android:layout_height="@dimen/_60dp"
            android:layout_below="@id/ll_vendor_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/twenty_dp"
            android:background="@drawable/home_image"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textSize="@dimen/twenty_sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/car_icon_gray" />

</RelativeLayout>
