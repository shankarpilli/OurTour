<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/_18dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/txt_left_drawer_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/side_menu_home" />

        <TextView
            android:id="@+id/txt_left_drawer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/txt_hoem"
            android:layout_marginTop="@dimen/_2dp"
            android:layout_marginLeft="@dimen/_25dp"
            android:layout_marginStart="@dimen/_25dp"
            android:textColor="@color/blackColor"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>
</LinearLayout>