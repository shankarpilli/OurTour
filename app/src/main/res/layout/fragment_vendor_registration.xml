<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fifteen_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_next">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten_dp"
                android:layout_marginBottom="@dimen/_7dp"
                android:background="@color/white"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_vendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:hint="@string/vendor_firm"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_email"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/owner_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_registration_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_owner"
                    android:hint="@string/registration_Number"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bank_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_bank_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bank_acc_no"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/branch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_ifsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ifsc_code"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_area_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/area_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_guarage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/guarage_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <EditText
                    android:id="@+id/et_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/down_arrow"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/district"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <Spinner
                    android:id="@+id/spinner_district"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_0dp"/>

                <EditText
                    android:id="@+id/et_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/down_arrow"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/state"
                    android:inputType="textNoSuggestions"
                    android:maxLines="1"
                    android:textSize="@dimen/twenty_sp" />

                <Spinner
                    android:id="@+id/spinner_state"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_0dp"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/home_image"
            android:text="@string/next"
            android:textAllCaps="false"
            android:textSize="@dimen/twenty_sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/car_icon_gray"
        android:contentDescription="@string/app_name" />
</RelativeLayout>